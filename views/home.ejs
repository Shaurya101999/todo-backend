<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <!-- app logo in title from google -->
        <link rel="icon" href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQmVAP6fCVhcp1_MnPe34uC2V5OtTdT8azugw&usqp=CAU" sizes="16x16" type="image/png">
        <title>
            To Do App
        </title>

        
        <!-- bootstrap for design -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    
        <!-- Style sheet -->
        <link rel="stylesheet" href="/css/home.css">
        
    </head>
    <body>

        <!-- main container for all content -->
        <div class="container">
            <h1>TO DO LIST</h1>
        
            <!-- container for adding new tasks -->
            <div class="form-group" id="todo">
                <form action="/create-todo" method="post">
                    
                    <input type="text" name="description" id="" placeholder="To do Description">
                    <input type="date" name="date" id="" placeholder="Do it By">

                    <div class="category">
                        <label for="category">Category</label>
                        <select name="category" id="">
                            <option value="Studies">Studies</option>
                            <option value="Office">Office</option>
                            <option value="Home">Home</option>
                            <option value="Health">Health</option>
                            <option value="Personal">Personal</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <input type="text" name="name" id="" placeholder="Created By"><br><br>
                    <button type="submit" class= "btn btn-outline-success">Add Task</button><br><br>

                </form>
            </div>

            <!-- container for displaying all tasks and deleting them -->
            <div id="list">
                <br>
                <form action="/delete-todo" method="get">
                    <button type="submit" class="btn btn-outline-danger">Delete Tasks</button>
                    <br><br>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th> </th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Due Date</th>
                                <th>Created By</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i of todo_list){ %>
                                <tr>
                                    <td><input type="checkbox" name="<%= i._id %>" id="" ></td>
                                    <td ><%= i.desc %></td>
                                    <td><%= i.category %></td>
                                    <td><%= i.deadLine %> </td>
                                    <td><%= i.createdBy %></td>
                                    
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </body>
    
</html>
